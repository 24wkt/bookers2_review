<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg") %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    <% end %>
  </tbody>
</table>